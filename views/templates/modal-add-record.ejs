<div class="modal fade" id="addRecord" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <form class="modal-content" method="post" action="/clientes/registrar/">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fa-solid fa-file-circle-plus"></i> Agregar Nuevo Registro</h5>
                <button type="reset" class="btn-close" data-mdb-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <!-- ================ -->
                <select name="type" class="form-select mb-4">
                    <option value="">Tipo de registro...</option>
                    <option value="charge">Cargo</option>
                    <option value="payment">Pago</option>
                </select>
                <div class="form-outline mb-4">
                    <input type="number" name="value" class="form-control" />
                    <label class="form-label">Valor en pesos</label>
                </div>
                <div class="form-outline mb-4">
                    <input type="text" name="description" class="form-control" />
                    <label class="form-label">Descripci√≥n</label>
                </div>
                <div class="mb-4">
                    <input type="date" name="date" class="form-control form-label" />
                </div>
                <!-- ================ -->
            </div>
            <div class="modal-footer">
                <button type="reset" class="btn btn-danger" data-mdb-dismiss="modal">Salir</button>
                <button type="submit" class="btn btn-success">Agregar</button>
            </div>
        </form>
    </div>
</div>
<script>
    const modal = document.getElementById('addRecord');
    const form = modal.querySelector('form');
    modal.addEventListener('show.mdb.modal', e => {
        const id = e.relatedTarget.getAttribute('data-mdb-id');
        form.setAttribute('action', '/clientes/registrar/' + id);
    })
</script>